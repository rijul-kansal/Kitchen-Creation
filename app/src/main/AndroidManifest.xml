<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cb"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZomatoClone"
        tools:targetApi="31">
        <activity
            android:name=".Activity.InterestActivity"
            android:theme="@style/AboveAppBarColourWhite"
            android:exported="true" >
        </activity>
        <activity
            android:name=".Activity.ContactUsActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:exported="true"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".Activity.SearchActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.DishSpecification"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.DetailOfCatCus"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.SeeAllCatCus"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.IntroActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AboveAppBarColourlightWhite" />
        <activity
            android:name=".Utils.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AboveAppBarColourlightWhite" />
        <activity
            android:name=".Activity.SignUpActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AboveAppBarColourlightWhite" />
        <activity
            android:name=".UI.WalkThrewScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AboveAppBarColourWhite" />
        <activity
            android:name=".UI.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AboveAppBarColourWhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>